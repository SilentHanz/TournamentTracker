        <th>Home Team</th>
        <th>Score</th>
        <th>Away Team</th>
        <th>Score</th>
        <th>Round</th>
    </tr>

@foreach (var item in roundOne) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HomeTeam.Name)
