@model StandingsViewModel
@{
    ViewBag.Title = "Home Page";
    var groupOne = Model.Teams.Where(t => t.Group == "Group 1");
    var groupTwo = Model.Teams.Where(t => t.Group == "Group 2");
    var roundOne = Model.Games.Where(g => g.Round.Id == 1);
    var roundTwo = Model.Games.Where(g => g.Round.Id == 2);
    var roundThree = Model.Games.Where(g => g.Round.Id == 3);
}

