@model IEnumerable<Team>

<table>
    <tr>
        <th>Name</th>
        <th>Games Played</th>
        <th>Wins</th>
        <th>Losses</th>
        <th>Ties</th>
        <th>Goals For</th>
        <th>Goals Against</th>
        <th>Goal Differential</th>
        <th>Points</th>
        @if (ViewBag.HasEditAccess) {
        <th></th>
        }
    </tr>

@foreach (var team in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelteam => team.Name)
        </td>
        <td>
            @Html.DisplayFor(modelteam => team.GamesPlayed)
        </td>
        <td>
            @Html.DisplayFor(modelteam => team.Wins)
        </td>
        <td>
            @Html.DisplayFor(modelteam => team.Losses)
        </td>
        <td>
            @Html.DisplayFor(modelteam => team.Ties)
        </td>
        <td>
            @Html.DisplayFor(modelteam => team.GoalsScored)
        </td>
        <td>
            @Html.DisplayFor(modelteam => team.GoalsAgainst)
        </td>
        <td>
            @if (team.GoalDifferential > 0) {
                <span class="positive">@team.GoalDifferential</span>
            } else if (team.GoalDifferential < 0) {
                <span class="negative">@team.GoalDifferential</span>
            } else {
                <span>@team.GoalDifferential</span>
            }
        </td>
        <td>
            <strong>@team.Points</strong>
        </td>
        @if (ViewBag.HasEditAccess) {
            <td class="actions">
                <nobr>
                    <a href="@Url.Action("Edit", "Teams", new {id = team.Id, tournamentSlug = team.Tournament.Slug})"><img src="/assets/images/editIcon.png" width="11" height="11" />Edit</a> 
                    <a href="@Url.Action("Delete", "Teams", new { id = team.Id, tournamentSlug = team.Tournament.Slug})"><img src="/assets/images/trash.png" width="11" height="11" />Delete</a>
                </nobr>
            </td>
        }
    </tr>
}
</table>
