@model TournamentReport.Models.Game

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Game</legend>

    <div class="display-label">HomeTeamScore</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.HomeTeamScore)
    </div>

    <div class="display-label">AwayTeamScore</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AwayTeamScore)
    </div>

    <div class="display-label">Round</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Round.Id)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
